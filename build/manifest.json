{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Stega",
  "short_name": "Stega",
  "description": "My Steganography manager",
  "action": {
    "default_popup": "index.html",
    "default_title": "Stega"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["my-styles.css"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ]
}
